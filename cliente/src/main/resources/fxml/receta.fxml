<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ScrollPane?>
<?import io.github.recetasDivertidas.pkgComponentes.Calificador?>
<?import org.controlsfx.glyphfont.Glyph?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.recetasDivertidas.pkgRecetas.RecetaController">
    <padding>
        <Insets topRightBottomLeft="10" />
    </padding>
    <top>
        <HBox alignment="BASELINE_LEFT" spacing="5" maxWidth="Infinity">
            <Label fx:id="lblTitulo" text="Título super genial" HBox.hgrow="ALWAYS" maxWidth="Infinity">
                <font>
                    <Font size="26.0" />
                </font>
            </Label>
            <Calificador fx:id="calificador"/>
            <HBox>
                <Label text="Calificación: "/>
                <Label fx:id="lblCalificacion">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="STAR"/>
                    </graphic>
                </Label>
                <Label fx:id="lblCantCalificaciones"/>
            </HBox>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true">
            <VBox>
                <Label text="Descripcion">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
                <Label fx:id="lblDescripcion" wrapText="true">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label text="Instrucciones">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
                <Label fx:id="lblInstrucciones" wrapText="true">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Label text="Ingredientes">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
                <ScrollPane fitToWidth="true" maxHeight="150">
                    <VBox fx:id="vboxIngredientes"/>
                </ScrollPane>
                <Label text="Imagenes">
                    <font>
                        <Font size="20"/>
                    </font>
                </Label>
                <VBox/>
            </VBox>
        </ScrollPane>
    </center>
    <cursor>
        <Cursor fx:constant="TEXT"/>
    </cursor>
</BorderPane>
