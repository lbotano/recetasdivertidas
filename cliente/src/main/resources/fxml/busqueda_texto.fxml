<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:id="borderPane"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="io.github.recetasDivertidas.pkgBusquedas.BusquedaTexto">
    <padding>
        <Insets topRightBottomLeft="10"
    </padding>
   <top>
       <VBox>
           <Label fx:id="lblBuscaTexto" text="Escribe lo que desees buscar">
              <font>
                  <Font size="16.0" />
              </font>
           </Label>
           <HBox>
               <TextField fx:id="txtBuscar"
                          HBox.hgrow="ALWAYS"/>
               <Button fx:id="btnBuscar"
                       onAction="#buscarRecetas"
                       text="Buscar"/>
           </HBox>
       </VBox>
   </top>
   <center>
       <ScrollPane maxWidth="Infinity">
           <VBox fx:id="vboxResultados" maxHeight="Infinity" maxWidth="Infinity" />
       </ScrollPane>
   </center>
   <bottom>
      <ButtonBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button fx:id="btnPrevPag" text="◀" onAction="#nextPag"/>
            <Button fx:id="btnNextPag" text="▶" onAction="#prevPag"/>
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
