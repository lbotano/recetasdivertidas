<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.recetasDivertidas.pkgBusquedaTexto.BusquedaTexto">
   <top>
       <GridPane BorderPane.alignment="CENTER">
           <Label fx:id="lblBuscaTexto" text="Escribe lo que desees buscar">
              <font>
                  <Font size="16.0" />
              </font>
           </Label>
           <TextField fx:id="txtBuscar" GridPane.rowIndex="1" prefWidth="300" />
           <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarRecetas" text="Buscar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
       </GridPane>
   </top>
   <center>
       <ScrollPane fx:id="scrollPane" maxWidth="Infinity">
           <VBox fx:id="vbox" maxHeight="Infinity" maxWidth="Infinity" />
       </ScrollPane>
   </center>
   <bottom>
      <ButtonBar fx:id="btnBar" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="btnPrevPag" mnemonicParsing="false" text="-&gt;" />
            <Button fx:id="btnNextPag" mnemonicParsing="false" text="&lt;-" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
