<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<BorderPane fx:id="borderpane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
       <GridPane fx:id="gridpane" BorderPane.alignment="CENTER">
           <columnConstraints>
               <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
               <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
           </columnConstraints>
           <rowConstraints>
               <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
               <RowConstraints minHeight="10.0" vgrow="ALWAYS"/>
           </rowConstraints>
           <Label fx:id="lblBuscaIng" text="Busca recetas eligiendo ingredientes">
              <font>
                  <Font size="16.0"/>
              </font>
           </Label>
           <Button fx:id="btnBuscar" mnemonicParsing="false" text="Button" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
           <CheckComboBox fx:id="chkcmbIngredientes" maxWidth="1.7976931348623157E308" GridPane.rowIndex="1"/>
       </GridPane>
   </top>
   <center>
      <ScrollPane fx:id="scrollpane" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" />
   </center>
   <bottom>
      <ButtonBar fx:id="btnBar" nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="btnPrevPag" mnemonicParsing="false" text="-&gt;" />
            <Button fx:id="btnNextPag" mnemonicParsing="false" text="&lt;-" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
