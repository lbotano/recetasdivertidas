<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>
<?import org.controlsfx.glyphfont.Glyph?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:controller="io.github.recetasDivertidas.pkgBusquedas.BusquedaIngredientes" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
        <top>
            <VBox>
                <Label text="Busca recetas eligiendo ingredientes">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <HBox>
                    <CheckComboBox fx:id="chkcmbIngredientes" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="btnBuscar" onAction="#buscar" text="Buscar">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="SEARCH"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
        </top>
        <center>
            <ScrollPane maxWidth="Infinity" fitToWidth="true">
                <VBox fx:id="vboxResultados" maxHeight="Infinity" maxWidth="Infinity" spacing="15">
                    <padding>
                        <Insets topRightBottomLeft="15"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </center>
        <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <buttons>
                    <Button onAction="#prevPag">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="CHEVRON_LEFT"/>
                        </graphic>
                    </Button>
                    <Button onAction="#nextPag">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="CHEVRON_RIGHT"/>
                        </graphic>
                    </Button>
                </buttons>
            </ButtonBar>
        </bottom>
</BorderPane>
