<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:id="borderpane" fx:controller="io.github.recetasDivertidas.pkgBusquedas.BusquedaCategoria" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
        <top>
            <VBox>
                <Label fx:id="lblBuscaCat" text="Busca recetas eligiendo categorias">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <HBox>
                    <CheckComboBox fx:id="chkcmbCategorias" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                    <Button fx:id="btnBuscar" onAction="#buscar" text="Buscar">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="SEARCH"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>
       </top>
       <center>
          <ScrollPane fx:id="scrollpane" maxWidth="Infinity">
              <VBox fx:id="vbox"/>
          </ScrollPane>
       </center>
        <bottom>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <buttons>
                    <Button fx:id="btnPrevPag" onAction="#nextPag">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="CHEVRON_LEFT"/>
                        </graphic>
                    </Button>
                    <Button fx:id="btnNextPag" onAction="#prevPag">
                        <graphic>
                            <Glyph fontFamily="FontAwesome" icon="CHEVRON_RIGHT"/>
                        </graphic>
                    </Button>
                </buttons>
            </ButtonBar>
        </bottom>
</BorderPane>
