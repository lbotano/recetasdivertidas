<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.CheckComboBox?>

<BorderPane fx:id="borderpane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <GridPane fx:id="gridpane" BorderPane.alignment="CENTER">
            <Label fx:id="lblBuscaCat" text="Busca recetas eligiendo categorias">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Button fx:id="btnBuscar" mnemonicParsing="false" text="Buscar" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <CheckComboBox fx:id="chkcmbCategorias" maxWidth="Infinity" GridPane.rowIndex="1" />
      </GridPane>
   </top>
   <center>
      <ScrollPane fx:id="scrollpane" maxWidth="Infinity"/>
   </center>
   <bottom>
      <ButtonBar fx:id="btnBar" nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="btnPrevPag" mnemonicParsing="false" text="-&gt;" />
            <Button fx:id="btnNextPag" mnemonicParsing="false" text="&lt;-" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
