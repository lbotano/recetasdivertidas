<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<?import org.controlsfx.glyphfont.Glyph?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="borderpane"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.recetasDivertidas.pkgSubir.Subir">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <top>
        <Label fx:id="lblTop" prefHeight="27.0" prefWidth="216.0" text="Sube una nueva receta aqui">
            <font>
                <Font name="Arial" size="14.0" />
            </font>
            <padding>
                <Insets bottom="10"/>
            </padding>
        </Label>
    </top>
    <center>
        <ScrollPane fx:id="scrollpane"
                    fitToWidth="true"
                    fitToHeight="true"
                    BorderPane.alignment="CENTER">
            <VBox spacing="10">
                <padding>
                    <Insets topRightBottomLeft="10"/>
                </padding>
                <TextField fx:id="txtTitulo" promptText="Título de la receta"/>
                <TextArea fx:id="txaDescripcion" promptText="Descripción de la receta"/>
                <TextArea fx:id="txaInstrucciones" promptText="Instrucciones de la receta"/>
                <GridPane VBox.vgrow="ALWAYS" maxWidth="Infinity" alignment="CENTER" hgap="10" vgap="10">
                    <VBox fx:id="vboxLeft" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                        <ComboBox fx:id="cmbIngredientes" promptText="Ingredientes" maxWidth="Infinity"/>
                        <Region VBox.vgrow="ALWAYS"/>
                        <Button fx:id="btnAgregarIng" text="Agregar" maxWidth="Infinity">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="PLUS"/>
                            </graphic>
                        </Button>
                    </VBox>
                    <VBox fx:id="vboxRight" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                        <ComboBox fx:id="cmbCategorias" promptText="Categorías" maxWidth="Infinity"/>
                        <Region VBox.vgrow="ALWAYS"/>
                        <Button fx:id="btnAgregarCat" text="Agregar" maxWidth="Infinity">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="PLUS"/>
                            </graphic>
                        </Button>
                    </VBox>
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <ButtonBar>
            <padding>
                <Insets top="10"/>
            </padding>
            <buttons>
                <Button fx:id="btnSubir" text="Subir">
                    <graphic>
                        <Glyph fontFamily="FontAwesome" icon="ARROW_UP"/>
                    </graphic>
                </Button>
            </buttons>
        </ButtonBar>
    </bottom>
</BorderPane>
